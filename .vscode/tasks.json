{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "make",
      "args": [
        "-j6"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "lint",
      "type": "shell",
      "command": "cpplint",
      "args": [
        "*.cpp",
        "*.h"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "clean",
      "type": "shell",
      "command": "rm",
      "args": [
        "-rf",
        "*.o",
        "*.gch"
      ],
      "group": "none",
      "problemMatcher": []
    }
  ]
}